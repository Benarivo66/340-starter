<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %> 
    
    <div class="accMgtContainer">
    <% if (["Admin", "Employee"].includes(locals.accountData.account_type)) { %>
      <h2>Welcome <%= locals.accountData.account_firstname %></h2>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">View inventory management</a></p>
    <% } else { %> 
      <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <% } %> 

    <p><%= account_firstname %></p>
    <p><%= account_lastname %></p>
    <p><%= account_email %></p>
   
    <%- messages() %> 
    <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul> <% } %>
    <h2>Manage Inventory</h2>
      <p><a href="/account/update">Update Account Information</a></p>
      <p><a href="/account/getAll">View all accounts (Admin only)</a></p>
  </div>